---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { buildBreadcrumbSchema } from '../../utils/schema';
import glossaryData from '../../../data/glossary.json';
import categoriesData from '../../../data/categories.json';

function getCategoryName(catSlug: string): string {
  const cat = categoriesData.categories.find((c: any) => c.slug === catSlug);
  return cat?.name || catSlug;
}

function getCategoryColor(catSlug: string): string {
  const cat = categoriesData.categories.find((c: any) => c.slug === catSlug);
  return cat?.color || '#14B8A6';
}

const sortedTerms = [...glossaryData.terms].sort((a: any, b: any) => a.term.localeCompare(b.term));

const title = 'B2B Data Glossary';
const description = 'Definitions for B2B data terms: enrichment, intent data, ABM, RevOps, and more. Clear explanations without the jargon.';

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Glossary' }
];

const allSchemas: object[] = [
  {
    "@type": "ItemList",
    "name": "B2B Data Glossary",
    "numberOfItems": sortedTerms.length,
    "itemListElement": sortedTerms.map((term: any, i: number) => ({
      "@type": "ListItem",
      "position": i + 1,
      "name": term.term,
      "url": `https://datastackguide.com/glossary/${term.slug}/`
    }))
  },
  buildBreadcrumbSchema(breadcrumbItems)
];
---

<BaseLayout
  title={title}
  description={description}
  canonicalPath="glossary/"
  schemas={allSchemas}
>
  <div class="container-narrow">
    <Breadcrumbs items={breadcrumbItems} noSchema />

    <section class="glossary-hero">
      <h1>B2B Data Glossary</h1>
      <p class="glossary-lead">Clear definitions for the terms you'll encounter when evaluating B2B data tools. No marketing fluff.</p>
    </section>

    <section class="terms-list">
      {sortedTerms.map((term: any) => (
        <a href={`/glossary/${term.slug}/`} class="term-card card">
          <div class="term-header">
            <h2>{term.term}</h2>
            <span class="term-cat" style={`background: ${getCategoryColor(term.category_slug)}15; color: ${getCategoryColor(term.category_slug)};`}>
              {getCategoryName(term.category_slug)}
            </span>
          </div>
          <p>{term.short_definition}</p>
        </a>
      ))}
    </section>
  </div>
</BaseLayout>

<style>
  .glossary-hero {
    padding: var(--space-8) 0 var(--space-6);
  }

  .glossary-hero h1 {
    margin-bottom: var(--space-3);
  }

  .glossary-lead {
    color: var(--color-text-secondary);
    font-size: var(--text-lg);
    max-width: 600px;
  }

  .terms-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding-bottom: var(--space-16);
  }

  .term-card {
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.2s;
  }

  .term-card:hover {
    border-color: var(--color-primary);
  }

  .term-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .term-card h2 {
    font-size: var(--text-base);
    margin: 0;
  }

  .term-cat {
    font-size: var(--text-xs);
    font-weight: 500;
    padding: 2px 8px;
    border-radius: var(--radius-full);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .term-card p {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    line-height: 1.5;
    margin: 0;
  }
</style>
