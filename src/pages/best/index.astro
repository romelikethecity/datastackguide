---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { buildBreadcrumbSchema } from '../../utils/schema';
import bestOfData from '../../../data/best_of.json';
import categoriesData from '../../../data/categories.json';

function getCategoryName(catSlug: string): string {
  const cat = categoriesData.categories.find((c: any) => c.slug === catSlug);
  return cat?.name || catSlug;
}

function getCategoryColor(catSlug: string): string {
  const cat = categoriesData.categories.find((c: any) => c.slug === catSlug);
  return cat?.color || '#14B8A6';
}

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Best Of' }
];

const allSchemas: object[] = [
  {
    "@type": "ItemList",
    "name": "Best B2B Data Tool Roundups",
    "numberOfItems": bestOfData.roundups.length,
    "itemListElement": bestOfData.roundups.map((r: any, i: number) => ({
      "@type": "ListItem",
      "position": i + 1,
      "name": r.title,
      "url": `https://datastackguide.com/best/${r.slug}/`
    }))
  },
  buildBreadcrumbSchema(breadcrumbItems)
];
---

<BaseLayout
  title="Best B2B Data Tools (2026)"
  description="Curated roundups of the best B2B data tools by category. Picks based on real pricing, features, and job market demand data."
  canonicalPath="best/"
  schemas={allSchemas}
>
  <div class="container">
    <Breadcrumbs items={breadcrumbItems} noSchema />

    <section class="page-hero">
      <h1>Best Of Roundups</h1>
      <p>Curated picks for every B2B data category. Each roundup ranks tools by pricing, features, and real adoption data from job postings.</p>
    </section>

    <section class="roundup-grid-section">
      <div class="roundup-grid">
        {bestOfData.roundups.map((r: any) => {
          const catColor = getCategoryColor(r.category_slug);
          const catName = getCategoryName(r.category_slug);
          return (
            <a href={`/best/${r.slug}/`} class="roundup-card card">
              <span class="roundup-card-cat" style={`background: ${catColor}15; color: ${catColor};`}>{catName}</span>
              <h2>{r.title}</h2>
              <p class="roundup-card-desc">{r.intro.slice(0, 120)}...</p>
              <span class="roundup-card-picks text-sm text-muted">{r.picks.length} tools ranked</span>
            </a>
          );
        })}
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .page-hero {
    padding: var(--space-8) 0 var(--space-6);
  }

  .page-hero h1 {
    margin-bottom: var(--space-4);
  }

  .page-hero p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    max-width: 640px;
  }

  .roundup-grid-section {
    padding-bottom: var(--space-16);
  }

  .roundup-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .roundup-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    text-decoration: none;
    color: var(--color-text);
    transition: border-color 0.2s;
  }

  .roundup-card:hover {
    border-color: var(--color-primary);
  }

  .roundup-card h2 {
    font-size: var(--text-lg);
    margin: 0;
    line-height: 1.3;
  }

  .roundup-card-cat {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: 500;
    padding: 2px 8px;
    border-radius: var(--radius-full);
    align-self: flex-start;
  }

  .roundup-card-desc {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.5;
    margin: 0;
  }

  .roundup-card-picks {
    margin-top: auto;
  }

  @media (max-width: 768px) {
    .roundup-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
